{% extends 'layout/base_auth.html.twig' %}

{% block content %}
	<div class="p-8">
		<h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Nova senha</h2>
		
		<div class="mb-6">
			<p class="text-gray-600 text-sm text-center leading-relaxed">
				Digite sua nova senha e confirme-a para finalizar a recuperação da sua conta.
			</p>
		</div>

		{% if flashMessage is not empty and flashMessage.tipo == 'sucesso' %}
			<!-- Success Alert -->
			<div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center gap-3">
				<span class="material-icons text-green-600" style="font-size: 20px;">check_circle</span>
				<div class="flex-1">
					<p class="text-sm font-medium">{{ flashMessage.mensagem }}</p>
				</div>
			</div>
		{% endif %}

		{% if flashMessage is not empty and flashMessage.tipo == 'erro' %}
			<!-- Error Alert -->
			<div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-center gap-3">
				<span class="material-icons text-red-600" style="font-size: 20px;">error</span>
				<div class="flex-1">
					<p class="text-sm font-medium">{{ flashMessage.mensagem }}</p>
				</div>
			</div>
		{% endif %}
		
		<form method="post" action="#">
			<!-- New Password Input -->
			<div class="mb-4">
				<label class="block text-sm font-medium text-gray-700 mb-2">
					<span class="flex items-center gap-2">
						<span class="material-icons text-gray-500" style="font-size: 18px;">lock</span>
						Nova senha
					</span>
				</label>
				<input 
					type="password" 
					name="nova_senha" 
					required 
					class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/20 focus:outline-none transition-all duration-200"
					placeholder="••••••••"
					minlength="6"
				>
			</div>

			<!-- Confirm Password Input -->
			<div class="mb-6">
				<label class="block text-sm font-medium text-gray-700 mb-2">
					<span class="flex items-center gap-2">
						<span class="material-icons text-gray-500" style="font-size: 18px;">lock_outline</span>
						Confirmar nova senha
					</span>
				</label>
				<input 
					type="password" 
					name="confirmar_senha" 
					required 
					class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-700 focus:border-violet-500 focus:ring-2 focus:ring-violet-500/20 focus:outline-none transition-all duration-200"
					placeholder="••••••••"
					minlength="6"
				>
			</div>

			<input type="hidden" name="token" value="{{ token }}">

			<!-- Password Requirements -->
			<div class="mb-6">
				<p class="text-xs text-gray-500">
					A senha deve ter pelo menos 6 caracteres.
				</p>
			</div>

			<!-- Reset Password Button -->
			<button 
				type="submit" 
				class="w-full bg-violet-500 hover:bg-purple-700 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-violet-500/30 text-white py-3 rounded-lg font-semibold text-lg flex items-center justify-center gap-2 transition-all duration-300 border-none cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed"
			>
				<span class="material-icons">check</span>
				Redefinir senha
			</button>
		</form>

		<!-- Back to Login Link -->
		<div class="text-center mt-6">
			<p class="text-gray-600 text-sm">
				Lembrou da sua senha? 
				<a href="/login" class="text-violet-500 hover:text-purple-700 hover:underline transition-all duration-200 font-semibold">
					Voltar ao login
				</a>
			</p>
		</div>
	</div>
{% endblock %}
